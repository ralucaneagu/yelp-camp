<%layout("layout/boilerplate")%>
<div class="row">
    <h1 class="text-center">Add a new campground</h1>
    <div class="col-6 offset-3">
        <form action ="/campgrounds" method="POST" class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id ="name" name="campground[name]" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="loc">Location</label>
                <input class="form-control" type="text" id ="loc" name="campground[loc]" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            
            <input type="file" name="image" id="" multiple>
            <!--<div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id ="image" name="campground[image]" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>-->
            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" type="text" id ="desc" name="campground[desc]" required></textarea>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="price">Price</span>
                <input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" name="campground[price]" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <button class="btn btn-success">Add</button>
        
        </form>
        <a href="/campgrounds">Back to all campgrounds</a>
    </div>
</div>